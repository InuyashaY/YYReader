<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#00BFFF</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    
    <!--阅读界面-->
    <style name="customReadActivityBottomMenu">
        <item name="android:textColor">@color/readMenuTextColor</item>
        <item name="android:textSize">@dimen/read_menu_text_size</item>
    </style>

    <style name="customReadActivityBottomMenu.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textSize">@dimen/read_menu_text_size</item>
    </style>

    <style name="customReadActivityTopBarButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/readMenuTextColor</item>
        <item name="android:textSize">@dimen/read_top_text_size</item>
    </style>

</resources>